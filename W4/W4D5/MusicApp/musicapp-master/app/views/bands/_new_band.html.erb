<% if action == :edit %>
  <% url = band_url(band) %>
<% else %>
  <% url = bands_url %>
<% end %>

<form action="<%=url%>" method="post">
  <% if action == :edit  %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <%= auth_token %>

  <label for="band_name">Band Name:</label>
  <input type="text" name="band[name]" value="<%= band.name %>" id="band_name">

  <input type="submit">
  </form>
</form>
